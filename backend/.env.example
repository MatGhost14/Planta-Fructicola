# ================================================
# CONFIGURACIÓN DE APLICACIÓN
# ================================================
# Copia este archivo a .env y configura los valores

# Aplicación
APP_NAME=Sistema de Inspección de Contenedores
APP_VERSION=2.1.0
DEBUG=False
ENVIRONMENT=production

# ================================================
# SEGURIDAD - ¡CAMBIAR ESTOS VALORES!
# ================================================
# Genera una clave secreta segura con:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CAMBIAR_ESTO_POR_UNA_CLAVE_SEGURA_GENERADA_ALEATORIAMENTE_64_CARACTERES_MINIMO
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ================================================
# BASE DE DATOS
# ================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=TU_PASSWORD_SEGURO_AQUI
DB_NAME=ImpeccionContenedor
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ================================================
# CORS - Dominios permitidos (separados por coma)
# ================================================
# Desarrollo: http://localhost:5173
# Producción: https://tudominio.com,https://app.tudominio.com
ALLOWED_ORIGINS=http://localhost:5173

# ================================================
# ARCHIVOS
# ================================================
CAPTURAS_DIR=../capturas
MAX_FILE_SIZE=10485760

# ================================================
# SERVIDOR
# ================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ================================================
# LOGGING
# ================================================
LOG_LEVEL=INFO
LOG_FILE=app.log
